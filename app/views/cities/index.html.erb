<% if notice %>
<div class="alert alert-dismissable alert-success">
  <button type="button" class="close" data-dismiss="alert">Ã—</button>
  <%= notice %>
</div>
<% end %>

<div class="col-lg-12">
  <div class="page-header">
    <h1 id="tables"><%= t('cities') %></h1>
  </div>

  <div class="row">
    <%= link_to t('new_city'), new_city_path, class:"btn btn-primary" %>
  </div>

  <div class="bs-component">
    <table class="table table-striped table-hover ">

      <thead>
        <tr>
          <th><%= t('activerecord.attributes.city.name') %></th>
          <th><%= t('activerecord.attributes.city.zip_code') %></th>
          <th><%= t('activerecord.attributes.city.state') %></th>
          <th><%= t('activerecord.attributes.city.country') %></th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @cities.each do |city| %>
          <tr>
            <td><%= city.name %></td>
            <td><%= city.zip_code %></td>
            <td><%= city.state.name %></td>
            <td><%= city.state.country.name %></td>
            <td><%= link_to t('edit'), edit_city_path(city) %></td>
            <td><%= link_to t('destroy'), city, method: :delete, data: { confirm: t('are_you_sure?') } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate @cities, renderer: BootstrapPagination::Rails %>
  </div>
</div>

