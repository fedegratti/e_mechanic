<%= form_for(city, html: { class: "form-horizontal", role: "form"}) do |f| %>
  <% if city.errors.any? %>
    <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
    <h2><%= pluralize(city.errors.count, "error") %> prohibited this city from being saved:</h2>

    <ul>
      <% city.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="col-lg-6">
    <div class="well bs-component">

      <div class="form-group">
        <%= f.label t(:state), class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.select :state_id, @states, {}, { class: "form-control", required: true } %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label t(:name), class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :name, class:'form-control', required: true %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :zip_code, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :zip_code, class:'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: "btn btn-primary" %>
        </div>
      </div>

    </div>
  </div>
<% end %>
