<% if notice %>
<div class="alert alert-dismissable alert-success">
  <button type="button" class="close" data-dismiss="alert">Ã—</button>
  <%= notice %>
</div>
<% end %>

<div class="col-lg-12">
  <div class="page-header">
    <h1 id="tables"><%= t('technical_reports') %></h1>
  </div>

  <div class="bs-component">
    <table class="table table-striped table-hover ">

      <thead>
        <tr>
          <th><%= t('activerecord.attributes.technical_report.car') %></th>
          <th><%= t('activerecord.attributes.technical_report.picture') %></th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @technical_reports.each do |technical_report| %>
          <tr>
            <td><a href="<%= car_path(technical_report.car) %>"><%= technical_report.car.name %></a></td>
            <td><a href="<%= technical_report.picture %>"><%= technical_report.picture %></a></td>
            <td><%= link_to t('show'), technical_report %></td>
            <td><%= link_to t('edit'), edit_technical_report_path(technical_report) %></td>
            <td><%= link_to t('destroy'), technical_report, method: :delete, data: { confirm: t('are_you_sure?') } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate @technical_reports, renderer: BootstrapPagination::Rails %>
  </div>
</div>

<%= link_to t('new_technical_report'), new_technical_report_path, class:"btn btn-primary" %>
