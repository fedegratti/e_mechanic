<% if notice %>
<div class="alert alert-dismissable alert-success">
  <button type="button" class="close" data-dismiss="alert">Ã—</button>
  <%= notice %>
</div>
<% end %>

<div class="col-lg-12">
  <div class="page-header">
    <h1 id="tables"><%= t('manuals') %></h1>
  </div>

  <div class="bs-component">
    <table class="table table-striped table-hover ">

      <thead>
        <tr>
          <th><%= t('activerecord.attributes.manual.car') %></th>
          <th><%= t('activerecord.attributes.manual.operation_number') %></th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @manuals.each do |manual| %>
          <tr>
            <td><a href="<%= car_path(manual.car) %>"><%= manual.car.name %></a></td>
            <td><%= manual.operation_number %></td>
            <td><%= link_to t('show'), manual %></td>
            <td><%= link_to t('edit'), edit_manual_path(manual) %></td>
            <td><%= link_to t('destroy'), manual, method: :delete, data: { confirm: t('are_you_sure?') } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate @manuals, renderer: BootstrapPagination::Rails %>
  </div>
</div>

<%= link_to t('new_manual'), new_manual_path, class:"btn btn-primary" %>
