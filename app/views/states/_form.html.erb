<%= form_for(state, html: { class: "form-horizontal", role: "form"}) do |f| %>
  <% if state.errors.any? %>
    <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
    <h2><%= pluralize(state.errors.count, "error") %> prohibited this state from being saved:</h2>

    <ul>
      <% state.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="col-lg-6">
    <div class="well bs-component">

      <div class="form-group">
        <%= f.label t(:country), class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.select :country_id, @countries, {}, { class: "form-control", required: true } %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label t(:name), class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :name, class:'form-control', required: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: "btn btn-primary" %>
        </div>
      </div>

    </div>
  </div>
<% end %>
