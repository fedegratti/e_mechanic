<% if notice %>
<div class="alert alert-dismissable alert-success">
  <button type="button" class="close" data-dismiss="alert">Ã—</button>
  <%= notice %>
</div>
<% end %>

<div class="col-lg-12">
  <div class="page-header">
    <h1 id="tables"><%= t('states') %></h1>
  </div>

  <div class="bs-component">
    <table class="table table-striped table-hover ">

      <thead>
        <tr>
          <th><%= t('activerecord.attributes.state.name') %></th>
          <th><%= t('activerecord.attributes.state.country') %></th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @states.each do |state| %>
          <tr>
            <td><%= state.name %></td>
            <td><%= state.country.name %></td>
            <td><%= link_to t('edit'), edit_state_path(state) %></td>
            <td><%= link_to t('destroy'), state, method: :delete, data: { confirm: t('are_you_sure?') } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate @states, renderer: BootstrapPagination::Rails %>
  </div>
</div>

<%= link_to t('new_state'), new_state_path, class:"btn btn-primary" %>
