<% if notice %>
<div class="alert alert-dismissable alert-success">
  <button type="button" class="close" data-dismiss="alert">Ã—</button>
  <%= notice %>
</div>
<% end %>

<div class="col-lg-4">

  <h2><%= t('information_of') %> <%= @car.name %></h2>
  <%= link_to t(:edit), edit_car_path(@car), class:"btn btn-primary" %>
  <%= link_to t(:back), cars_path, class:"btn btn-primary" %>

  <table class="table table-striped table-hover ">
    <tbody>
      <tr>
        <td>
          <strong><%= t('client') %></strong>
        </td>
        <td>
          <a href="<%= client_path(@car.client) %>"><%= @car.client.name %></a>
        </td>
      </tr>
      <tr>
        <td>
          <strong><%= t('brand') %></strong>
        </td>
        <td>
          <%= @car.brand %>
        </td>
      </tr>
      <tr>
        <td>
          <strong><%= t('model') %></strong>
        </td>
        <td>
          <%= @car.model %>
        </td>
      </tr>
      <tr>
        <td>
          <strong><%= t('chassis_number') %></strong>
        </td>
        <td>
          <%= @car.chassis_number %>
        </td>
      </tr>
      <tr>
        <td>
          <strong><%= t('engine_number') %></strong>
        </td>
        <td>
          <%= @car.engine_number %>
        </td>
      </tr>
      <tr>
        <td>
          <strong><%= t('plate') %></strong>
        </td>
        <td>
          <%= @car.plate %>
        </td>
      </tr>
      <tr>
        <td>
          <strong><%= t('sell_date') %></strong>
        </td>
        <td>
          <%= @car.sell_date %>
        </td>
      </tr>
    </tbody>
  </table>
</div>
<div class="col-lg-8">

  <h1><%= t('car_repair_orders') %></h1>

  <%= render 'repair_orders_table', repair_orders: @car.repair_orders.order('order_number DESC') %>
</div>
