<% if notice %>
<div class="alert alert-dismissable alert-success">
  <button type="button" class="close" data-dismiss="alert">Ã—</button>
  <%= notice %>
</div>
<% end %>

<div class="col-lg-12">
  <div class="page-header">
    <h1 id="tables"><%= t('cars') %></h1>
  </div>

  <div class="bs-component">
    <table class="table table-striped table-hover ">

      <thead>
        <tr>
          <th><%= t('activerecord.attributes.car.brand') %></th>
          <th><%= t('activerecord.attributes.car.model') %></th>
          <th><%= t('activerecord.attributes.car.chassis_number') %></th>
          <th><%= t('activerecord.attributes.car.client') %></th>
          <th><%= t('activerecord.attributes.car.engine_number') %></th>
          <th><%= t('activerecord.attributes.car.plate') %></th>
          <th><%= t('activerecord.attributes.car.sell_date') %></th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @cars.each do |car| %>
          <tr>
            <td><%= car.brand %></td>
            <td><%= car.model %></td>
            <td><%= car.chassis_number %></td>
            <td>
            <% if car.client? %>
              <a href="<%= client_path(car.client) %>"><%= car.client.name %></a>
            <% end %>
            </td>
            <td><%= car.engine_number %></td>
            <td><%= car.plate %></td>

            <td><%= car.sell_date %></td>
            <td><%= link_to t('show'), car %></td>
            <td><%= link_to t('edit'), edit_car_path(car) %></td>
            <td><%= link_to t('destroy'), car, method: :delete, data: { confirm: t('are_you_sure?') } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= link_to t('new_car'), new_car_path, class:"btn btn-primary" %>
