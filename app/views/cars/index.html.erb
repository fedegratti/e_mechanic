<% if notice %>
<div class="alert alert-dismissable alert-success">
  <button type="button" class="close" data-dismiss="alert">Ã—</button>
  <%= notice %>
</div>
<% end %>

<div class="container-fluid">
  <div class="row">
    <div class="form-horizontal">
      <div class="col-lg-4">
        <div class="well bs-component">
          <div class="form-group">
            <label class="col-lg-4 control-label" for="car_identification"><%= t('search_car') %></label>

            <div class="col-lg-7">
              <input class="form-control ui-autocomplete-input" type="text" id="car_identification" autocomplete="off">
            </div>

          </div>
        </div>
      </div>
    </div>

    <div class="page-header" style="margin: 0; float: right; padding-right: 10px;">
      <h1 id="tables"><%= t('cars') %></h1>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-6">
      <%= link_to t('new_car'), new_car_path, class:"btn btn-primary" %>
    </div>
  </div>
</div>

<div class="col-lg-12">
  <div class="bs-component">
    <%= render 'cars_table', cars: @cars %>
    <%= will_paginate @cars, renderer: BootstrapPagination::Rails %>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function(){
    $('#car_identification').on('change input autocompleteselect',function(event, ui){
      getCars('/cars/get_by_identification','car_identification='+$(this).val());
    });
  });
  function getCars(url,data)
  {
    $.post(url,data,function(data){$('#cars_table').html(data)});
  }
</script>
