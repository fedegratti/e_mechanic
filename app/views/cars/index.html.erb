<% if notice %>
<div class="alert alert-dismissable alert-success">
  <button type="button" class="close" data-dismiss="alert">Ã—</button>
  <%= notice %>
</div>
<% end %>

<div class="col-lg-12">
  <div class="page-header">
    <h1 id="tables"><%= t('cars') %></h1>
  </div>

  <div class="bs-component">
    <table class="table table-striped table-hover ">

      <thead>
        <tr>
          <th><%= t('activerecord.attributes.repair_order.client') %></th>
          <th><%= t('activerecord.attributes.repair_order.brand') %></th>
          <th><%= t('activerecord.attributes.repair_order.model') %></th>
          <th><%= t('activerecord.attributes.repair_order.chassis_number') %></th>
          <th><%= t('activerecord.attributes.repair_order.engine_number') %></th>
          <th><%= t('activerecord.attributes.repair_order.plate') %></th>
          <th><%= t('activerecord.attributes.repair_order.kilometers') %></th>
          <th><%= t('activerecord.attributes.repair_order.sell_date') %></th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @cars.each do |car| %>
          <tr>
            <td><%= car.client.name %></td>
            <td><%= car.brand %></td>
            <td><%= car.model %></td>
            <td><%= car.chassis_number %></td>
            <td><%= car.engine_number %></td>
            <td><%= car.plate %></td>
            <td><%= car.kilometers %></td>
            <td><%= car.sell_date %></td>
            <td><%= link_to 'Show', car %></td>
            <td><%= link_to 'Edit', edit_car_path(car) %></td>
            <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= link_to 'New Car', new_car_path, class:"btn btn-primary" %>
