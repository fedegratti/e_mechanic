<% if notice %>
<div class="alert alert-dismissable alert-success">
  <button type="button" class="close" data-dismiss="alert">Ã—</button>
  <%= notice %>
</div>
<% end %>

<div class="col-lg-12">
  <div class="page-header">
    <h1 id="tables"><%= t('clients') %></h1>
  </div>

  <div class="bs-component">
    <table class="table table-striped table-hover ">

      <thead>
        <tr>
          <th><%= t('first_name') %></th>
          <th><%= t('last_name') %></th>
          <th><%= t('type') %></th>
          <th><%= t('ci/ruc') %></th>
          <th><%= t('email') %></th>
          <th><%= t('telephone') %></th>
          <th><%= t('address') %></th>
          <th><%= t('city') %></th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @clients.each do |client| %>
          <tr>
            <td><%= client.first_name %></td>
            <td><%= client.last_name %></td>
            <td><%= client.type %></td>
            <td><%= client.identification %></td>
            <td><%= client.email %></td>
            <td><%= client.telephone %></td>
            <td><%= client.address %></td>
            <td><%= client.city.name %></td>
            <td><%= link_to t('show'), client_path(client) %></td>
            <td><%= link_to t('edit'), edit_client_path(client) %></td>
            <td><%= link_to t('destroy'), client_path(client), method: :delete, data: { confirm: t('are_you_sure?') } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


<%= link_to t('new_client'), new_client_path, class:"btn btn-primary" %>
