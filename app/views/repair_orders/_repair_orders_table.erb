<table id="repair_orders_table" class="table table-striped table-hover ">

  <thead>
    <tr>
      <th><%= t('activerecord.attributes.repair_order.order_number') %></th>
      <th><%= t('activerecord.attributes.repair_order.car_id') %></th>
      <th><%= t('activerecord.attributes.repair_order.client_id') %></th>
      <th><%= t('activerecord.attributes.repair_order.type') %></th>
      <th><%= t('activerecord.attributes.repair_order.description') %></th>
      <th><%= t('activerecord.attributes.repair_order.note') %></th>
      <th><%= t('activerecord.attributes.repair_order.kilometers') %></th>
      <th><%= t('activerecord.attributes.repair_order.in_ayax') %></th>
      <th><%= t('activerecord.attributes.repair_order.repair_date') %></th>
      <th><%= t('activerecord.attributes.repair_order.created_at') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% repair_orders.each do |repair_order| %>
      <tr>
        <td><%= repair_order.order_number %></td>
        <td>
        <% if repair_order.car? %>
          <a href="<%= car_path(repair_order.car) %>"><%= repair_order.car.name %></a>
        <% end %>
        </td>
        <td><a href="<%= client_path(repair_order.car.client) %>"><%= repair_order.car.client.name %></a></td>
        <td><%= !repair_order.order_type.nil? ? t(repair_order.order_type.downcase) : '' %></td>
        <td><%= repair_order.description %></td>
        <td><%= repair_order.note %></td>
        <td><%= repair_order.kilometers %></td>
        <td><%= repair_order.ayax ? t('yes') : t('no') %></td>
        <td><%= repair_order.repair_date %></td>
        <td><%= repair_order.created_at.strftime("%d-%m-%Y") %></td>
        <td><%= link_to t('show'), repair_order_path(repair_order) %></td>
        <td><%= link_to t('edit'), edit_repair_order_path(repair_order) %></td>
        <td><%= link_to t('destroy'), repair_order_path(repair_order), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
