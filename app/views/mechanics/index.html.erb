<div class="alert alert-dismissable alert-success">
  <button type="button" class="close" data-dismiss="alert">Ã—</button>
  <%= notice %>
</div>
<% end %>

<div class="col-lg-12">
  <div class="page-header">
    <h1 id="tables"><%= t('mechanics') %></h1>
  </div>

  <div class="bs-component">
    <table class="table table-striped table-hover ">

      <thead>
        <tr>
          <th><%= t('activerecord.attributes.mechanic.city') %></th>
          <th><%= t('activerecord.attributes.mechanic.first_name') %></th>
          <th><%= t('activerecord.attributes.mechanic.last_name') %></th>
          <th><%= t('activerecord.attributes.mechanic.telephone') %></th>
          <th><%= t('activerecord.attributes.mechanic.address') %></th>
          <th><%= t('activerecord.attributes.mechanic.email') %></th>
          <th><%= t('activerecord.attributes.mechanic.identification') %></th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @mechanics.each do |mechanic| %>
          <tr>
            <td><%= mechanic.city.name %></td>
            <td><%= mechanic.first_name %></td>
            <td><%= mechanic.last_name %></td>
            <td><%= mechanic.telephone %></td>
            <td><%= mechanic.address %></td>
            <td><%= mechanic.email %></td>
            <td><%= mechanic.identification %></td>
            <td><%= link_to t('show'), mechanic %></td>
            <td><%= link_to t('edit'), edit_mechanic_path(mechanic) %></td>
            <td><%= link_to t('destroy'), mechanic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= link_to t('new_mechanic'), new_mechanic_path, class:"btn btn-primary" %>
